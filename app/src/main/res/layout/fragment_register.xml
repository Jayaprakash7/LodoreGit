<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E0E0E0"
        tools:context="lodore.com.lodore.Fragment.RegisterFragment">

        <!-- TODO: Update blank fragment layout -->

        <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:hint="Enter ur name"
            android:drawableRight="@drawable/msg_icon"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dip"
            android:background="@drawable/edittxtshape"
            android:id="@+id/registration_email"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:paddingTop="30dp"
            android:hint="Enter ur name"
            android:drawableRight="@drawable/lock_icon"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dip"
            android:background="@drawable/edittxtshape"
            android:id="@+id/registration_password"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editText1"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:paddingTop="30dp"
            android:hint="Enter ur name"
            android:drawableRight="@drawable/lock_icon"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dip"
            android:background="@drawable/edittxtshape"
            android:id="@+id/registration_confirmpassword"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true" />


        <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:paddingTop="30dp"
            android:hint="Enter ur name"
            android:drawableRight="@drawable/contact_icon"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dip"
            android:background="@drawable/edittxtshape"
            android:id="@+id/registration_name"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editText3"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:paddingTop="30dp"
            android:hint="Enter ur name"
            android:drawableRight="@drawable/phone_icon"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dip"
            android:background="@drawable/edittxtshape"
            android:id="@+id/registration_phone_one"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editText4"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:paddingTop="30dp"
            android:hint="Enter ur name"
            android:drawableRight="@drawable/phone_icon"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dip"
            android:background="@drawable/edittxtshape"
            android:id="@+id/registration_phone_two"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editText5"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:id="@+id/checkBox"
            android:layout_below="@+id/editText6"
            android:layout_alignLeft="@+id/editText6"
            android:layout_alignStart="@+id/editText6" />

        <Button
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:text="Login"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/button"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/checkBox"
            android:layout_alignLeft="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox" />


    </LinearLayout>
</ScrollView>