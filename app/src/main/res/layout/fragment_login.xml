<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E0E0E0"
    tools:context="lodore.com.lodore.Fragment.LoginFragment"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:hint="Enter ur name"
            android:drawableRight="@drawable/msg_icon"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dip"
            android:background="@drawable/edittxtshape"
            android:id="@+id/login_email"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_marginTop="26dp" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:paddingTop="20dp"
            android:hint="Enter ur name"
            android:drawableRight="@drawable/lock_icon"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dip"
            android:background="@drawable/edittxtshape"
            android:id="@+id/login_password"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />


    </LinearLayout>


    <Button
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:text="Login"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:id="@+id/button_login"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout2"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingStart="10dp"
            android:text="Forgotten Password"
            android:paddingLeft="20dp"
            android:id="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginLeft="100dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="logged in"
                android:gravity="end"
                android:paddingTop="5dp"
                android:textColor="@color/primary_text"/>

            <CheckBox
                android:id="@+id/radioButton1"
                android:layout_gravity="right"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>